<Application x:Class="ver20.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ver20"
             StartupUri="MainWindow.xaml">

    <Application.Resources>

        <!-- TEXT BOX STYLE -->
        <Style x:Key="TextBoxStyle"
               TargetType="TextBox">
            
            <Setter Property="Foreground"
                    Value="#444444"/>
            
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Template">
                
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">

                        <Border x:Name="mainBorder"
                                Background="#252525"
                                CornerRadius="5"
                                BorderBrush="#535353"
                                BorderThickness="1">

                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Stretch"
                                          HorizontalAlignment="Stretch"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- ROUNDED BUTTON STYLE -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">

                        <Border x:Name="mainBorder"
                        BorderBrush="#535353"
                        BorderThickness="1"
                        Padding="1"
                        RenderTransformOrigin="0.5,0.5"
                        CornerRadius="5">

                            <Border.Background>
                                <SolidColorBrush x:Name="bgBrush" Color="#252525"/>
                            </Border.Background>

                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="bgBrush"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#252525"
                                                    Duration="0:0:0.12"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="bgBrush"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#313131"
                                                    Duration="0:0:0.12"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="bgBrush"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#1B1B1B"
                                                    Duration="0:0:0.08"/>
                                            <DoubleAnimation Storyboard.TargetName="mainBorder"
                                                     Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                     To="0.96"
                                                     Duration="0:0:0.08"/>
                                            <DoubleAnimation Storyboard.TargetName="mainBorder"
                                                     Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                     To="0.96"
                                                     Duration="0:0:0.08"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="bgBrush"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#D0D0D0"
                                                    Duration="0"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- TEXT BOX WATER MARK -->
        <Style x:Key="TextBoxWaterMark"
               TargetType="TextBox"
               BasedOn="{StaticResource {x:Type TextBox}}">

            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Foreground" Value="#BDBDBD"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>

                            <Border x:Name="Border"
                                    BorderBrush="#333333"
                                    BorderThickness="1"
                                    Background="#1F1F1F"
                                    CornerRadius="5"/>

                            <ScrollViewer x:Name="PART_ContentHost"
                                  Margin="6,2"/>

                            <TextBlock x:Name="Watermark"
                                       Text="Введите данные"
                                       Foreground="#777777"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Visibility="Collapsed"/>
                        </Grid>

                        <ControlTemplate.Triggers>

                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text"
                                               Value=""/>

                                    <Condition Property="IsKeyboardFocusWithin"
                                               Value="False"/>

                                </MultiTrigger.Conditions>

                                <Setter TargetName="Watermark"
                                        Property="Visibility"
                                        Value="Visible"/>

                            </MultiTrigger>

                            <Trigger Property="IsKeyboardFocused"
                                     Value="True">

                                <Setter TargetName="Border"
                                        Property="BorderBrush"
                                        Value="#555555"/>

                                <Setter TargetName="Border"
                                        Property="BorderThickness"
                                        Value="1"/>
                            </Trigger>

                            <!-- Наведение -->
                            <Trigger Property="IsMouseOver"
                                     Value="True">

                                <Setter TargetName="Border"
                                        Property="BorderBrush"
                                        Value="#555555"/>
                            </Trigger>

                            <Trigger Property="IsEnabled"
                                     Value="False">

                                <Setter TargetName="Border"
                                        Property="BorderBrush"
                                        Value="#2A2A2A"/>

                                <Setter Property="Foreground"
                                        Value="#777777"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Стиль кнопки "О программе" -->
        <Style x:Key="AboutButtonStyle"
               TargetType="Button">

            <Setter Property="Cursor"
                    Value="Arrow"/>

            <Setter Property="Template">

                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="mainBorder"
                                Background="#252525"
                                CornerRadius="5"
                                Padding="1"
                                BorderBrush="#535353"
                                BorderThickness="1">

                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">

                                <Path Data="{TemplateBinding Tag}"
                                      Fill="{TemplateBinding Foreground}"
                                      Stretch="Uniform"
                                      Width="1" Height="1"
                                      Margin="0,0,0,0"/>

                                <ContentPresenter />
                            </StackPanel>
                        </Border>

                        <!-- Триггеры для визуального отклика -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">

                                <Setter TargetName="mainBorder"
                                        Property="Background"
                                        Value="#313131"/>

                                <Setter Property="Cursor"
                                        Value="Hand"/>

                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">

                                <Setter TargetName="mainBorder"
                                        Property="Background"
                                        Value="#1B1B1B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>