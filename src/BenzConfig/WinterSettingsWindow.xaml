<Window x:Class="ver20.WinterSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Зимний режим"
        Height="300"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanMinimize"
        WindowStyle="None"
        Background="White"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border BorderBrush="#202020"
            BorderThickness="1"
            CornerRadius="0">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Шапка -->
            <Border Grid.Row="0"
                    Background="#202020">
                
                <Grid>
                    <TextBlock Text="Зимний режим"
                               FontFamily="/Regular/Fonts/Exo2/#Exo 2"
                               FontWeight="Regular"
                               FontSize="14"
                               Foreground="Gray"
                               VerticalAlignment="Center"
                               Margin="10"/>

                    <!-- Кнопка закрытия -->
                    <Button Width="35"
                            Height="35"
                            Click="BtnClose_Click"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="463,0,0,0"
                            VerticalAlignment="Center">

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid x:Name="grid"
                                      Background="#01000000">

                                    <Image Source="/Resource/close.png"
                                           Width="16"
                                           Height="16"
                                           Stretch="Uniform"/>
                                </Grid>
                                <ControlTemplate.Triggers>

                                    <Trigger Property="IsMouseOver"
                                             Value="True">

                                        <Setter TargetName="grid"
                                                Property="Background"
                                                Value="#333333"/>
                                    </Trigger>

                                    <Trigger Property="IsPressed"
                                             Value="True">

                                        <Setter TargetName="grid"
                                                Property="Background"
                                                Value="#444444"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Основной контент -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">

                <StackPanel Margin="10">

                    <!-- Пропорции -->
                    <TextBlock Text="Пропорции"
                               FontFamily="/Regular/Fonts/Exo2/#Exo 2"
                               FontWeight="SemiBold"
                               FontSize="18"
                               Margin="0,0,0,10"/>

                    <StackPanel Orientation="Vertical"
                                Margin="0,0,0,10">

                        <!-- Город -->
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Город"
                                       FontFamily="/Regular/Fonts/Exo2/#Exo 2"
                                       FontWeight="Regular"
                                       FontSize="14"
                                       VerticalAlignment="Center"/>

                            <Grid Grid.Column="1"
                                  Height="25">

                                <TextBox Name="PropCity"
                                         Background="Transparent"
                                         MaxLength="3"
                                         VerticalContentAlignment="Center"
                                         PreviewTextInput="NumberOnly"/>

                                <TextBlock Text="Введите данные"
                                           FontFamily="/Regular/Fonts/Exo2/#Exo 2"
                                           FontWeight="Regular"
                                           FontSize="14"
                                           Foreground="Gray"
                                           Margin="4,0,0,0"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False">

                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            
                                            <Setter Property="Visibility"
                                                    Value="Collapsed"/>

                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=PropCity}"
                                                             Value="">

                                                    <Setter Property="Visibility"
                                                            Value="Visible"/>

                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Text, ElementName=PropCity}"
                                                             Value="{x:Null}">

                                                    <Setter Property="Visibility"
                                                            Value="Visible"/>
                                                    
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>

                            <TextBlock Grid.Column="2"
                                       Text="Значение должно быть 0–100"
                                       Foreground="Red"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed"
                                       Margin="10,0,0,0"
                                       x:Name="ErrorTextCity"/>
                        </Grid>

                        <!-- Трасса -->
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Трасса"
                                       FontFamily="/Regular/Fonts/Exo2/#Exo 2"
                                       FontWeight="Regular"
                                       FontSize="14"
                                       VerticalAlignment="Center"/>

                            <Grid Grid.Column="1"
                                  Height="25">

                                <TextBox Name="PropHighway"
                                         Background="Transparent"
                                         MaxLength="3"
                                         VerticalContentAlignment="Center"
                                         PreviewTextInput="NumberOnly"/>

                                <TextBlock Text="Введите данные"
                                           FontFamily="/Regular/Fonts/Exo2/#Exo 2"
                                           FontWeight="Regular"
                                           FontSize="14"
                                           Foreground="Gray"
                                           Margin="4,0,0,0"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False">

                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility"
                                                    Value="Collapsed"/>

                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=PropHighway}"
                                                             Value="">

                                                    <Setter Property="Visibility"
                                                            Value="Visible"/>

                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Text, ElementName=PropHighway}"
                                                             Value="{x:Null}">
                                                    
                                                    <Setter Property="Visibility"
                                                            Value="Visible"/>

                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>

                            <TextBlock Grid.Column="2"
                                       Text="Значение должно быть 0–100"
                                       Foreground="Red"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed"
                                       Margin="10,0,0,0"
                                       x:Name="ErrorTextHighway"/>
                        </Grid>
                    </StackPanel>

                    <!-- Нормы расхода -->
                    <TextBlock Text="Нормы расхода"
                               FontFamily="/Regular/Fonts/Exo2/#Exo 2"
                               FontWeight="SemiBold"
                               FontSize="18"
                               Margin="0,0,0,10"/>
                    
                    <StackPanel Orientation="Vertical">
                        
                        <!-- Город -->
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Город"
                                       FontFamily="/Regular/Fonts/Exo2/#Exo 2"
                                       FontWeight="Regular"
                                       FontSize="14"
                                       VerticalAlignment="Center"/>

                            <Grid Grid.Column="1"
                                  Height="25">

                                <TextBox Name="RatesCity"
                                         Background="Transparent"
                                         MaxLength="6"
                                         VerticalContentAlignment="Center"
                                         PreviewTextInput="NumberOnly"/>
                            </Grid>
                        </Grid>

                        <!-- Трасса -->
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Трасса"
                                       FontFamily="/Regular/Fonts/Exo2/#Exo 2"
                                       FontWeight="Regular"
                                       FontSize="14"
                                       VerticalAlignment="Center"/>

                            <Grid Grid.Column="1"
                                  Height="25">

                                <TextBox Name="RatesHighway"
                                         Background="Transparent"
                                         MaxLength="6"
                                         VerticalContentAlignment="Center"
                                         PreviewTextInput="NumberOnly"/>
                            </Grid>
                        </Grid>
                    </StackPanel>

                    <!-- Кнопка сохранить -->
                    <Button x:Name="BtnSave"
                            Style="{StaticResource RoundedButtonStyle}"
                            FontFamily="/Regular/Fonts/Exo2/#Exo 2"
                            FontWeight="Medium"
                            FontSize="12"
                            Foreground="LightGray"
                            Content="Сохранить"
                            Height="32"
                            Width="100"
                            Margin="352,15,0,0"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>