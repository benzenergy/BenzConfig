<Window x:Class="ver20.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="О программе"
        Height="300"
        Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        Background="#FFFFFF"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border BorderBrush="#202020"
            BorderThickness="1"
            CornerRadius="0">

        <Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="#202020">

                    <Grid>

                        <!-- Кнопка закрытия -->
                        <Button Width="36"
                                Height="36"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,0,0"
                                Click="BtnClose_Click"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand">

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid x:Name="grid"
                                          Background="#01000000">

                                        <Image Source="/Resource/close.png"
                                               Width="16"
                                               Height="16"
                                               Stretch="Uniform"/>
                                    </Grid>

                                    <ControlTemplate.Triggers>

                                        <Trigger Property="IsMouseOver"
                                                 Value="True">

                                            <Setter TargetName="grid"
                                                    Property="Background"
                                                    Value="#333333"/>
                                        </Trigger>

                                        <Trigger Property="IsPressed"
                                                 Value="True">

                                            <Setter TargetName="grid"
                                                    Property="Background"
                                                    Value="#555555"/>
                                        </Trigger>

                                        <Trigger Property="IsEnabled"
                                                 Value="False">

                                            <Setter TargetName="grid"
                                                    Property="Background"
                                                    Value="#222222"/>

                                            <Setter Property="Opacity"
                                                    Value="0.5"/>

                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>

                <!-- ОСНОВНОЙ КОНТЕНТ -->
                <Grid Grid.Row="1"
                      Margin="20">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Иконка слева -->
                    <Image Grid.Column="0"
                           Width="150"
                           Stretch="Uniform"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="25,0,0,15"
                           Source="/Resource/icon.png"/>

                    <!-- Текст справа -->
                    <StackPanel Grid.Column="1"
                                Margin="5,0,0,0"
                                VerticalAlignment="Center">

                        <TextBlock Text="BenzConfig 2.5"
                                   FontFamily="/Assets/Fonts/Baijamjuree/#Bai Jamjuree"
                                   FontWeight="Bold"
                                   FontSize="24"
                                   Margin="0,0,0,15"/>

                        <TextBlock FontSize="14"
                                   Margin="0,0,0,0">
                            
                            <Run Text="Лицензия "
                                 FontFamily="/Assets/Fonts/Exo2/#Exo 2"
                                 FontWeight="Regular"/>
                            
                            <Hyperlink NavigateUri="https://www.gnu.org/licenses/gpl-3.0.txt"
                                       RequestNavigate="Hyperlink_RequestNavigate">
                                GNU GPL v3.0
                            </Hyperlink>
                        </TextBlock>

                        <TextBlock FontSize="14"
                                   Margin="0,0,0,0">
                            
                            <Run Text="Материалы "
                                 FontFamily="/Assets/Fonts/Exo2/#Exo 2"
                                 FontWeight="Regular"/>
                            
                            <Hyperlink NavigateUri="https://www.flaticon.com/free-icon/sign_2737912"
                                       RequestNavigate="Hyperlink_RequestNavigate">
                                www.flaticon.com
                            </Hyperlink>
                        </TextBlock>

                        <TextBlock FontSize="14"
                                   Margin="0,0,0,0">
                            
                            <Run Text="Исходник "
                                 FontFamily="/Assets/Fonts/Exo2/#Exo 2"
                                 FontWeight="Regular"/>
                            
                            <Hyperlink NavigateUri="https://github.com/benzenergy/BenzConfig"
                                       RequestNavigate="Hyperlink_RequestNavigate">
                                www.github.com
                            </Hyperlink>
                        </TextBlock>

                        <TextBlock Text="© 2024 benzenergy"
                                   Foreground="Gray"
                                   FontSize="14"
                                   FontFamily="/Assets/Fonts/Exo2/#Exo 2"
                                   FontWeight="Regular"
                                   Margin="0,15,0,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>