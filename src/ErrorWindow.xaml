<Window x:Class="ver20.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Error"
        Height="150"
        Width="350"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="White"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border Background="#F0F0F0"
		    BorderBrush="#202020"
	        BorderThickness="1"
	        CornerRadius="0">

        <Grid>
            <Border Background="#202020"
				Height="35"
				VerticalAlignment="Top">

                <Grid>
                    <TextBlock Text="Ошибка"
						   VerticalAlignment="Center"
						   Margin="5,0,0,5"
						   Foreground="Gray"
                           FontFamily="/Assets/Fonts/Gilroy/#Gilroy"
						   FontWeight="Regular"
						   FontSize="12"/>
                </Grid>
            </Border>

            <Border Background="White"
				CornerRadius="0,0,8,8"
				Margin="0,30,0,0">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="MessageText"
                           Text=""
                           FontFamily="/Assets/Fonts/#Gilroy"
                           FontWeight="Regular"
                           FontSize="12"
                           TextWrapping="Wrap"
                           Foreground="#444"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0, 20, 0, 0"/>

                    <Button Content="OK"
						Style="{StaticResource RoundedButtonStyle}"
                        Foreground="LightGray"
                        FontFamily="/Assets/Fonts/Gilroy/#Gilroy"
                        FontWeight="Medium"
                        FontSize="12"
                        Grid.Row="1"
                        Width="70"
                        Height="30"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,10"
                        Click="BtnOk_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>